<Window x:Class="SignalRChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SignalRChatClient"
        Title="Chat Client" 
        WindowStartupLocation="CenterScreen"
        Height="650" 
        Width="850">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--TOOLBAR-->
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                BorderBrush="SteelBlue"
                BorderThickness="0,0,0,1"
                Margin="2,2,2,5"
                Padding="0,0,0,2">

            <Grid>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Name:"
                           FontSize="14"
                           VerticalAlignment="Center"/>

                <TextBox Grid.Column="1"
                         Width="250"
                         Margin="5,0,2,2"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Column="2" 
                        Content="Connect"
                        Command="{Binding ConnectCommand}"
                        HorizontalAlignment="Left"
                        Height="32"
                        Width="85"
                        Margin="0,0,2,2"/>

                <Button Grid.Column="3" 
                        Content="Disconnect"
                        Command="{Binding DisconnectCommand}"
                        HorizontalAlignment="Left"
                        Height="32"
                        Width="85"
                        Margin="0,0,2,2"/>
            </Grid>

        </Border>
        
        <!--LEFT SIDE-->
        <Grid Grid.Row="1"
              Grid.Column="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TreeView MinWidth="150"
                      Margin="2">
            </TreeView>

            <Border Grid.Row="1">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">

                    <Button Content="Add"
                            Command="{Binding AddGroupCommand}"
                            Height="22"
                            Width="65"
                            HorizontalAlignment="Left"
                            Margin="2,0,0,2"/>

                    <Button Content="Remove"
                            Command="{Binding RemoveGroupCommand}"
                            Height="22"
                            Width="65"
                            HorizontalAlignment="Left"
                            Margin="2,0,0,2"/>

                </StackPanel>

            </Border>

        </Grid>
            

        <!--SPLITTER-->
        <GridSplitter Grid.Row="1"
                      Grid.Column="1"
                      Width="3"
                      Margin="0,2,0,2"
                      Background="#FFABADB3"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"/>

        <!--CONTENT-->
            <Grid Grid.Row="1"
                  Grid.Column="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <RichTextBox Grid.Row="0"
                             FontSize="14"
                             IsReadOnly="True"
                             Margin="2,2,2,0">
                    
                </RichTextBox>
                
                <TextBox Grid.Row="2"
                         Margin="2"
                         FontSize="14"
                         Padding="2"/>

            </Grid>
    </Grid>
    
</Window>
